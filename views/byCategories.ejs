<h1 class="pb-4">
  Explore <% if (typeof types !== 'undefined' && types.length > 0) { %>
  Categories <% } else { %> <%= products[0].type.name %> <% } %>
</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <% if (typeof types !== 'undefined' && types.length > 0) { %>
    <li class="breadcrumb-item active" aria-current="page">Categories</li>
    <% } else if (typeof products !== 'undefined' && products.length > 0) { %>
    <li class="breadcrumb-item">
      <a href="/categories">Categories</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">By Category</li>
    <% } %>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
  <% if (typeof types !== 'undefined' && types.length > 0) { %> <%
  types.forEach(type => { %>
  <a href="/categories/<%= type.id %>" class="col text-center category__link">
    <div class="category__img shadow">
      <img
        src="/images/<%= type.name %>.jpeg"
        alt="<%= type.name %>"
        loading="lazy"
      />
    </div>
    <div class="pt-1"><%= type.name %></div>
  </a>
  <% }) %>
</div>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
  <% } else if (typeof products !== 'undefined' && products.length > 0) { %> <%
  products.forEach(product => { %>
  <a href="/product/<%= product.id %>" class="col text-center category__link">
    <div class="category__img category__img--large shadow">
      <img src="" alt="<%= product.name %>" loading="lazy" />
    </div>
    <div class="pt-1"><%= product.name %></div>
  </a>
  <% }) %> <% } else { %>
  <p>No products found</p>
  <% } %>
</div>
