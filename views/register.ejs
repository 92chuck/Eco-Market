<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Register Today!</h1>
  <div class="col lg-6 mx-auto">
    <p class="lead">
      Browse amazingly fresh vegetables and get delivered! Fill our form to get
      started
    </p>
  </div>
</div>

<div class="row justify-content-center">
  <% if (registerSucceeded.length !== 0) { %>
  <div class="col-8 alert alert-success" role="alert">
    <%- registerSucceeded %>
  </div>
  <% } %> <% if (registerFailed.length !== 0) { %>
  <div class="col-8 alert alert-danger" role="alert"><%- registerFailed %></div>
  <% } %>
  <div class="col-8">
    <form method="POST" action="/register" class="needs-validation" novalidate>
      <div class="row g-3">
        <div class="col-12">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
            Username must be greater than 4 and less than 10 characters with no
            special characters
          </div>
        </div>

        <div class="col-12">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
            Email must be greater than 8 and less than 40 characters with no
            special characters besides @
          </div>
        </div>

        <div class="col-12">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
            Password must contain upper and lowercase, number, and special
            characters: length should be between 4 and 12
          </div>
        </div>

        <div class="col-12">
          <label for="confirm" class="form-label">Confirm password</label>
          <input
            type="password"
            name="confirm"
            id="confirm"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Password doesn't match</div>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/scripts/register.js"></script>

