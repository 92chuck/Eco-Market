<!-- main image and description start -->

<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
  <div class="col-12 col-lg-6">
    <img
      src="/images/homeimg.jpeg"
      width="607"
      height="510"
      class="d-block mx-lg auto img-fluid"
      loading="lazy"
      alt="vegetables"
    />
  </div>
  <div class="col-12 col-lg-6">
    <h1 class="display-5 fw-bold mb-3">
      Huge selection of delicious vegetables!
    </h1>
    <p class="lead">
      Explore our huge selection of delicious vegetables including: organic
      vegetables, delicious vegan and vegetarian ingredients, gorgeous fresh
      greens.
    </p>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <a
        href="/products/?page=1"
        class="btn btn-primary btn-dark btn-lg px-4 me-md-2"
        >Explore All Vegetables</a
      >
      <a href="/brands" class="btn btn-outline-secondary btn-lg px-4 me-md-2"
        >Explore All Brands</a
      >
    </div>
  </div>
</div>

<!-- main image and description end -->

<!-- Categories start -->

<div class="d-flex mb-2 align-items-center">
  <h2>Categories</h2>
  <a href="/categories" class="ms-auto">View All</a>
</div>
<div
  class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4 justify-content-center"
>
  <% if (typeof types !== 'undefined' && types.length > 0) { %> <%
  types.forEach(type => { %>
  <a
    href="/categories/<%= type.id %>/?page=1"
    class="col text-center category__link"
  >
    <div class="category__img shadow">
      <img
        src="/images/<%= type.name %>.jpeg"
        alt="<%= type.name %>"
        loading="lazy"
      />
    </div>
    <div class="pt-1"><%= type.name %></div>
  </a>
  <% }) %> <% } else { %>
  <p>No Categories found</p>
  <% } %>
</div>

<!-- Categories  end -->

<!-- brands  start -->

<div class="d-flex mb-2 align-items-center">
  <h2>Brands</h2>
  <a href="/brands" class="ms-auto">View All</a>
</div>
<div
  class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4 justify-content-center"
>
  <% if (typeof brands !== 'undefined' && brands.length > 0) { %> <%
  brands.forEach(brand => { %>
  <a
    href="/brands/<%= brand.id %>/?page=1"
    class="col text-center category__link"
  >
    <div class="category__img shadow" style="height: 190px">
      <img
        src="/images/<%= brand.name %>.png"
        alt="<%= brand.name %>"
        loading="lazy"
      />
    </div>
    <div class="pt-1"><%= brand.name %></div>
  </a>
  <% }) %> <% } else { %>
  <p>No brands found</p>
  <% } %>
</div>

<!-- brands  end -->

<!-- Latest Products  start -->

<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Latest Products</h2>
    <a href="/products/?page=1" class="ms-auto">View More</a>
  </div>
  <div class="conatiner row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if (typeof products !== 'undefined' && products.length > 0) { %> <%
    products.forEach(product => { %>
    <a href="/product/<%= product.id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="" alt="<%= product.name %>" loading="lazy" />
      </div>
      <div class="pt-1"><%= product.name %></div>
    </a>
    <% }) %> <% } else { %>
    <p>No products found</p>
    <% } %>
  </div>
</section>

<!-- Latest Products  end -->
